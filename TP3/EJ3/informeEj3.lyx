\end{equation}

\end_inset


\end_layout

\begin_layout Itemize
En modo diferencial 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
V_{out}=V_{offset}-\frac{R_{2}}{R_{1}}\,\left(1+\frac{R_{3}}{R_{4}}\right)V_{d}
\end{equation}

\end_inset


\end_layout


\end_inset

 adecuados
\end_layout

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Subsubsection*
\noindent
Cálculo analítico de la impedancia de entrada:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
V^{+}=V^{-}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
V+=V_{IN}\left(\frac{R}{R+\frac{1}{sC}}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
I_{IN}=\frac{V_{IN}-V+}{\frac{1}{sC}}+\frac{V^{+}}{R}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
I_{IN}=sC\left(V_{IN}-V_{IN}\left(\frac{R}{R+\frac{1}{sC}}\right)\right)+V_{IN}\frac{1}{R+\frac{1}{sC}}
\]

\end_inset


\end_layout

